# MongoDB Configuration
# Set USE_LOCAL_DB to 'true' to use local MongoDB, 'false' to use Atlas
USE_LOCAL_DB=false

# MongoDB Atlas Connection (Cloud)
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
ATLAS_DATABASE_NAME=employee360

# Local MongoDB Connection
MONGODB_LOCAL_URI=mongodb://localhost:27017/
LOCAL_DATABASE_NAME=employee360

# Server Configuration
PORT=8001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# User ID for activity data files (should match the username in JSONL filenames)
# Example: GBS05262, Admin, etc.
USER_ID=Admin

# Data directory for activity JSONL files (relative to backend-express folder)
DATA_DIR=../data-collector/activity_data

# ==================== HEALTH METRICS CONFIGURATION ====================

# Use mock data for health metrics (true/false)
# Set to 'true' for testing without real devices
# Set to 'false' to use real BLE devices and Google Fit
USE_MOCK_HEALTH_DATA=true

# ==================== GOOGLE FIT CONFIGURATION ====================
# Required only if USE_MOCK_HEALTH_DATA=false

# Get these from: https://console.cloud.google.com/
# 1. Create a project
# 2. Enable Google Fitness API
# 3. Create OAuth 2.0 credentials

GOOGLE_FIT_CLIENT_ID=
GOOGLE_FIT_CLIENT_SECRET=
GOOGLE_FIT_REDIRECT_URI=http://localhost:8001/api/health/google-fit/callback

# ==================== OPENAI CONFIGURATION ====================
# For AI suggestions feature

OPENAI_API_KEY=

# ==================== NOTIFICATION CONFIGURATION ====================

NOTIFICATIONS_ENABLED=true

# Legacy support (automatically set based on USE_LOCAL_DB)
MONGODB_URI=
DATABASE_NAME=
